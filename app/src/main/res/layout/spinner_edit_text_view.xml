<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSpinnerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/editFieldLabel"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edtSpinnerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/gray_arrow_drop_down_icon"
                android:focusable="false" android:longClickable="false"
                android:hint=""
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/editTextColor"
                android:textSize="@dimen/editTextTextSize"
                android:background="@android:color/transparent"
                android:gravity="center"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spnrSpinnerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>